{
    "manifest_version": 3,
    "name": "Block YouTube Shorts",
    "version": "1.0",
    "description": "Blocks YouTube Shorts from appearing on YouTube.",
    "host_permissions": ["https://www.youtube.com/*"],
    "content_scripts": [
      {
        "matches": ["https://www.youtube.com/*"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ]
  }
  